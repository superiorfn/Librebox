ens */ @media (max-width:900px){.window{width:90%;height:50%}}

--- FILE: script.js --- const startBtn = document.getElementById('startBtn') const startMenu = document.getElementById('startMenu') const windowsContainer = document.getElementById('windows') const taskIcons = document.getElementById('taskIcons') const clockEl = document.getElementById('clock') let zIndex = 2

startBtn.addEventListener('click', ()=> startMenu.classList.toggle('hidden'))

// Clock function updateClock(){ const d = new Date() clockEl.textContent = d.toLocaleTimeString([], {hour:'2-digit',minute:'2-digit'}) } setInterval(updateClock,1000) updateClock()

// Start menu app buttons document.querySelectorAll('.start-app').forEach(b=>{ b.addEventListener('click', ()=>{ const app = b.dataset.app openWindow(app, b.textContent.trim()) startMenu.classList.add('hidden') }) })

function openWindow(url, title){ // Create window element const win = document.createElement('div') win.className = 'window' win.style.left = '80px' win.style.top = '80px' win.style.zIndex = ++zIndex

// Titlebar const titlebar = document.createElement('div') titlebar.className = 'titlebar' titlebar.innerHTML = <div>${title}</div><div><button class=close>✕</button></div> win.appendChild(titlebar)

// Content (iframe for apps or external URL) const content = document.createElement('div') content.className = 'content' const iframe = document.createElement('iframe') iframe.src = url iframe.style.width = '100%' iframe.style.height = '100%' iframe.style.border = '0' content.appendChild(iframe) win.appendChild(content)

// Add to desktop windowsContainer.appendChild(win)

// Add task icon const t = document.createElement('button') t.className = 'task-icon' t.textContent = title taskIcons.appendChild(t)

// Close handler titlebar.querySelector('.close').addEventListener('click', ()=>{ win.remove(); t.remove() })

// Focus on click win.addEventListener('mousedown', ()=>{ win.style.zIndex = ++zIndex })

// Simple drag let isDown=false, startX, startY, startLeft, startTop titlebar.addEventListener('pointerdown', (e)=>{ isDown=true startX = e.clientX startY = e.clientY startLeft = parseInt(win.style.left) startTop = parseInt(win.style.top) titlebar.style.cursor='grabbing' }) window.addEventListener('pointermove', (e)=>{ if(!isDown) return const dx = e.clientX - startX const dy = e.clientY - startY win.style.left = (startLeft + dx) + 'px' win.style.top = (startTop + dy) + 'px' }) window.addEventListener('pointerup', ()=>{isDown=false;titlebar.style.cursor='grab'})

// Task icon click: bring to front t.addEventListener('click', ()=>{ win.style.zIndex = ++zIndex }) }

// Keyboard friendly: open notes with N, calc with C, toggle start with Meta/Windows window.addEventListener('keydown',(e)=>{ if(e.key==='Meta') startMenu.classList.toggle('hidden') if(e.key.toLowerCase()==='n') openWindow('apps/notes.html','Bloco de notas') if(e.key.toLowerCase()==='c') openWindow('apps/calc.html','Calculadora') })

// Small helper: open default apps on first load for demo if(!localStorage.getItem('librebox-demo')){ localStorage.setItem('librebox-demo','1') openWindow('apps/notes.html','Bloco de notas') }

--- FILE: apps/notes.html --- <!doctype html>

<html>
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Bloco de notas - LibreBox</title>
  <style>body{font-family:system-ui;padding:8px}textarea{width:100%;height:80vh}</style>
</head>
<body>
  <h3>Bloco de notas</h3>
  <textarea id="t"></textarea>
  <script>
    const t = document.getElementById('t')
    const key = 'librebox-notes'
    t.value = localStorage.getItem(key) || ''
    t.addEventListener('input', ()=> localStorage.setItem(key,t.value))
  </script>
</body>
</html>--- FILE: apps/calc.html --- <!doctype html>

<html>
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Calculadora - LibreBox</title>
  <style>body{font-family:system-ui;padding:8px}input{width:100%;font-size:18px;padding:8px}</style>
</head>
<body>
  <h3>Calculadora</h3>
  <input id="e" placeholder="Digite expressão (ex: 2+2*3)" />
  <div id="res"></div>
  <script>
    const e = document.getElementById('e')
    const r = document.getElementById('res')
    e.addEventListener('keydown', (ev)=>{
      if(ev.key==='Enter'){
        try{ r.textContent = eval(e.value) }
        catch(err){ r.textContent = 'Erro' }
      }
    })
  </script>
</body>
</html>--- FILE: apps/player.html --- <!doctype html>

<html>
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Player - LibreBox</title>
  <style>body{font-family:system-ui;padding:8px}audio{width:100%}</style>
</head>
<body>
  <h3>Player</h3>
  <p>Carregue um arquivo de áudio do Xbox ou use uma URL.</p>
  <input id="u" placeholder="URL de áudio (opcional)" style="width:100%" />
  <audio id="a" controls></audio>
  <script>
    const a = document.getElementById('a')
    const u = document.getElementById('u')
    u.addEventListener('change', ()=>{ a.src = u.value })
  </script>
</body>
